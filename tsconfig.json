{
    "compilerOptions": {
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types", "./phaser.d.ts"],
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "outDir": "./dist/",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
    },
    "types": [
      "phaser"
    ],
    "include": ["src/**/*", "phaser.d.ts"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}